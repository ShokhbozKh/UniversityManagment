@model IEnumerable<UniversityManagment.Entities.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="button-create">Create New</a>
    <hr />
</p>
<div>
    <form asp-controller="Courses" asp-action="Index">
        <p>
            <input type="text" placeholder="    Search" name="SearchString" value="@ViewBag.Search" />
            <input type="submit" value="Search" class="button-search"/>
        </p>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Id)</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfRegister)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfRegister)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departments.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="button-edit">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="button-details">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="button-delete">Delete</a>
            </td>
            <td>
               
            </td>
        </tr>
}
    </tbody>
</table>
